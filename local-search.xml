tePosts = <span class="hljs-string">&#x27;[&#x27;</span>;<br>    <span class="hljs-keyword">var</span> dayTime = <span class="hljs-number">3600</span> * <span class="hljs-number">24</span> * <span class="hljs-number">1000</span>;<br>    <span class="hljs-keyword">for</span> (<span class="hljs-keyword">var</span> time = startDate; time &lt;= endDate; time += dayTime) &#123;<br>        <span class="hljs-keyword">var</span> date = <span class="hljs-title function_ invoke__">moment</span>(time).<span class="hljs-title function_ invoke__">format</span>(<span class="hljs-string">&#x27;YYYY-MM-DD&#x27;</span>);<br>        datePosts = (i === <span class="hljs-number">0</span> ? datePosts + <span class="hljs-string">&#x27;[&quot;&#x27;</span> : datePosts + <span class="hljs-string">&#x27;, [&quot;&#x27;</span>) + date + <span class="hljs-string">&#x27;&quot;, &#x27;</span> + (dateMap.<span class="hljs-title function_ invoke__">has</span>(date) ? dateMap.<span class="hljs-title function_ invoke__">get</span>(date) : <span class="hljs-number">0</span>) + <span class="hljs-string">&#x27;]&#x27;</span>;<br>        i++;<br>    &#125;<br>    datePosts += <span class="hljs-string">&#x27;]&#x27;</span>;%&gt;<br>    let option = &#123;<br>        title: &#123;<br>            top: <span class="hljs-number">0</span>,<br>            text: <span class="hljs-string">&#x27;文章熱力圖&#x27;</span>,<br>            left: <span class="hljs-string">&#x27;center&#x27;</span>,<br>            textStyle: &#123;<br>                color: <span class="hljs-string">&#x27;#3C4858&#x27;</span><br>            &#125;<br>        &#125;,<br>        tooltip: &#123;<br>            padding: <span class="hljs-number">10</span>,<br>            backgroundColor: <span class="hljs-string">&#x27;#555&#x27;</span>,<br>            borderColor: <span class="hljs-string">&#x27;#777&#x27;</span>,<br>            borderWidth: <span class="hljs-number">1</span>,<br>            formatter: <span class="hljs-function"><span class="